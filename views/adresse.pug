extends layout

block content
  .jumbotron
    .row
      .logo-wild.text-center.col-xs-12
        .options-home
          a(href='/')
            img(src='images/logo_orange_pastille.png', alt='', height='100')
    .row
      .bloc1.text-center.col-xs-12
        .textbloc1
          span.typegradient WHO LIVES IN THE
    .row
      .container.col-xs-4
        div
          form.form-horizontal(method='POST' action='/contact')
            fieldset
              .form-group
                .input-arrondissement
                  input#textinput.form-control.input-md(name='arrondissement', type='text', placeholder='Ex: 7', height='70' required)
            .row
              .bloc-arrondissement.text-center.col-xs-12
                div
                  span.typegradient ARRONDISSEMENT?
              .row
                .col-xs-12
                  a(href='/contact')
                    button.form-control.col-xs-6.col-xs-offset-12
                      | Envoyer
